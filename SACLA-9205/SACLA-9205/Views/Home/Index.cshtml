@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>SACLA Conference Paper Mamagement System</h2>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Welcome to SACLA</h2>
        <p>
            This is a sample application that was
            created for assessment purposes as part
            of the CSIS3734/CSIQ3734 module. All
            rights reserved.
        </p>
    </div>
    <div class="col-md-4">
        <h2>News</h2>
        <p>
            Visit our News page to find out what is
            happening
        </p>
        <p>@Html.ActionLink("See latest news >>", "News", "Home", new { @class="btn btn-default" })</p>
    </div>
    <div class="col-md-4">
        <h2>Contact us</h2>
        <p>
            Give us a call or drop us an email to find
            out more about  upcomming conferences
            and workshops
        </p>
        <p>@Html.ActionLink("See contact details >>", "Contact", "Home", new { @class="btn btn-default" })</p>
    </div>
</div>